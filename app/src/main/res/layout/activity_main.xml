<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.savingdata.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saving data in the shared pref file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/etSaveDataToSharedPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSaveDataToSharedPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="usingSharedPref"
        android:text="Save Value to Shared Pref"/>

    <TextView
        android:id="@+id/tvDataFromSharedPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGetDataToSharedPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="usingSharedPref"
        android:text="Get Data from Shared Pref"/>

    <Button
        android:id="@+id/btnClearSharedPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="usingSharedPref"
        android:text="Clear Data from Shared Pref" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saving data in SQLlite database"
        android:textSize="20sp"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/etPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPersonGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPersonAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSavePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="usingSQLLite"
        android:text="Save Person" />

    <Button
        android:id="@+id/btnGetPersonTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="usingSQLLite"
        android:text="Load Person" />

</LinearLayout>
